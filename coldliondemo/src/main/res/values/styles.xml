<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogNoActionBarTheme" parent="android:Theme.DeviceDefault.Light.Dialog.NoActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>
    <style name="LoginButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/login_bt</item>
        <item name="android:textSize">22dp</item>
        <item name ="android:textColor">@color/login_text_color</item>
    </style>

    <style name="TitleBarButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/title_bt</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
